<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="25dp">

            <RelativeLayout
                android:id="@+id/morningSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/top_bg">

                <TextView
                    android:id="@+id/greeting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginEnd="25dp"
                    android:layout_marginBottom="55dp"
                    android:fontFamily="@font/montserrat"
                    android:gravity="center"
                    android:text="Good Morning"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="24dp" />

            </RelativeLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/quote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12sp"
                app:cardElevation="8dp"
                android:layout_below="@id/morningSection"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:layout_marginBottom="25dp"
                android:layout_marginTop="-25dp"
                app:cardBackgroundColor="@color/white">

                <TextView
                    android:id="@+id/quoteTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15sp"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:fontFamily="@font/open_sans" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:id="@+id/fist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/quote"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/medicineCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/primary"
                    app:cardCornerRadius="12sp"
                    app:cardElevation="8dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="12dp">

                        <TextView
                            android:id="@+id/medTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:fontFamily="@font/montserrat"
                            android:text="Medicine"
                            android:textColor="@color/white"
                            android:textSize="20sp" />

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_below="@id/medTitle"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="8dp"
                            android:src="@drawable/medicine" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/pediatricsCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/primary"
                    app:cardCornerRadius="12sp"
                    app:cardElevation="8dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="12dp">

                        <TextView
                            android:id="@+id/pedTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:fontFamily="@font/montserrat"
                            android:text="Pediatrics"
                            android:textColor="@color/white"
                            android:textSize="20sp" />

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_below="@id/pedTitle"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="8dp"
                            android:src="@drawable/pediatrics" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/second"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/fist"
                android:layout_marginTop="6dp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/surgeryCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/primary"
                    app:cardCornerRadius="12sp"
                    app:cardElevation="8dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="12dp">

                        <TextView
                            android:id="@+id/surTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:fontFamily="@font/montserrat"
                            android:text="Surgery"
                            android:textColor="@color/white"
                            android:textSize="20sp" />

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_below="@id/surTitle"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="8dp"
                            android:src="@drawable/surgery" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/psychriatryCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/primary"
                    app:cardCornerRadius="12sp"
                    app:cardElevation="8dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="12dp">

                        <TextView
                            android:id="@+id/psycTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:fontFamily="@font/montserrat"
                            android:text="Psychiatry"
                            android:textColor="@color/white"
                            android:textSize="20sp" />

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_below="@id/psycTitle"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="8dp"
                            android:src="@drawable/psychiatry" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/gynecologyCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12sp"
                app:cardElevation="8dp"
                android:layout_below="@id/second"
                android:layout_margin="12dp"
                app:cardBackgroundColor="@color/primary">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/gynTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/montserrat"
                        android:text="Gynecology \u0026 \n Obstetrics"
                        android:textColor="@color/white"
                        android:textSize="20sp" />

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="25dp"
                        android:layout_toEndOf="@id/gynTitle"
                        android:src="@drawable/gynecology" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/DonateCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12sp"
                app:cardElevation="8dp"
                android:layout_below="@id/gynecologyCard"
                android:layout_margin="10dp"
                app:cardBackgroundColor="@color/white">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/donaTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/montserrat"
                        android:text="Medical"
                        android:textAllCaps="true"
                        android:textColor="@color/primary"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="25dp"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/sharing" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/privacy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Privacy Policy"
                android:fontFamily="@font/open_sans"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_below="@id/DonateCard"
                android:textStyle="italic"
                android:layout_margin="10dp" />


        </RelativeLayout>

    </ScrollView>

</RelativeLayout>